<!-- **** ADD-CLASSIFICATION **** -->
<main class="main-forms">
<!-- Content Heading -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else { res.redirect('/') } %>
    
    <!-- Message Block -->
    <%- messages() %> <% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
        <% }) %>
    </ul>
    <% } %>
    
    <form class="forms" id="classificationForm" action="/inv/add-classification" method="POST">
        <label for="classification_name">Classification Name</label>
        <input 
            type="text" 
            name="classification_name" 
            id="classification_name"
            required
            pattern="[A-Za-z]+"
            value="<% locals.classification_name %>"
            title="Name must contain alphabetic characters only!"
        />
        <p class="classification-paragraph">Name must contain alphabetic characters only!</p>

        <button type="submit">Add Classification</button>
    </main>
    </form>